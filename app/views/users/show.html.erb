<h1>Your account</h1>
<table class="table table-striped table-bordered">
  <thead>
    <th>Username</th>
    <th>Email</th>
    <th>Date Joined</th>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.username %></td>
      <td><%= @user.email %></td>
      <td><%= @user.created_at.localtime %></td>
    </tr>
  </tbody>
</table>

<%= link_to "Edit Profile", edit_user_path if @user == current_user %>
<%= link_to "Create new blog post!", new_user_post_path(@user) if @user == current_user %>
<%= link_to "See blog posts!", user_posts_path(@user) %>
