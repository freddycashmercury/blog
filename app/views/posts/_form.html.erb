<%= form_for [current_user, @post] do |f| %>
  <div class="container">
    <div class="form-group">
      <%= f.label :title, :class => "col-sm-2 control-label" %>
      <%= f.text_field :title, :value => @post.title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, :class => "col-sm-2 control-label" %>
      <%= f.text_area :body, :value => @post.body, :class => "form-control" %>
    </div>
    <%= f.submit "Submit", :class => "submit-button" %>
  </div>
<% end %>

