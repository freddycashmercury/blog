<div class="container">
  <div class="text-center"><h1><%= @feed.name %></h1></div>
  <div class="text-center"><h2><%= @feed.description %></h2></div>
</div>

<% @feed.posts.each do |post| %>
  <div class="text-center"><%= link_to "#{post.title}", user_post_path(@user, post)  %></div>
  <div class="text-left body-box"><%= post.body %></div>
  <hr />
<% end %>

<%= link_to "Edit blog info", edit_user_feed_path(@user, @feed), :class => "btn btn-default" if @user == current_user %>
